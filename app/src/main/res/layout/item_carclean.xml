<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_pic"
                android:layout_margin="2dp"
                android:layout_width="100dp"
                android:layout_height="130dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/ic_insert_photo_black_24dp"
                />
            <LinearLayout
                android:layout_toRightOf="@id/img_pic"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_margin="4dp"
                    android:textColor="@color/textColor"
                    tools:text="好消息好消息"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_margin="4dp"
                    tools:text="好消息好消息好消息好消息好消息好消息好消息好消息好消息好消息好消息好消息v好消息好消息好消息好消息好消息好消息好消息好消息好消息好消息好消息好消息v好消息好消息"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_margin="4dp"
                    tools:text="15元/次"
                    android:textColor="@color/color_red_ff4a26"
                    android:maxLines="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>